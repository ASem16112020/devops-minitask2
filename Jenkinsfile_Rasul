pipeline {
    agent any 

    // Определяем переменные
    environment {
        // Ваш логин DockerHub (уже исправлено на AviciiG)
        DOCKER_IMAGE = 'AviciiG/python-devops:latest' 
        DOCKERFILE_NAME = 'Dockerfile_Rasul'
    }

    stages {
        stage('Build Setup (Python Lint)') {
            // Используем Docker-агент для этой стадии. 
            // Это гарантирует, что команда 'python3' будет найдена внутри контейнера python:3.9-slim.
            agent {
                docker { 
                    image 'python:3.9-slim' 
                } 
            }
            steps {
                echo 'Starting Python syntax check...'
                // Проверка синтаксиса Python
                sh 'python3 -m py_compile app.py'
                echo 'Python syntax check passed.'
            }
        }
        
        stage('Docker Build') {
            // Используем основной агент, чтобы выполнить команду 'docker' на хост-машине (вашем Маке)
            agent any 
            steps {
                echo 'Building Docker image...'
                // Сборка образа с использованием вашего именованного Dockerfile
                sh "docker build -f ${DOCKERFILE_NAME} -t ${DOCKER_IMAGE} ."
            }
        }
        
        stage('Push to Hub') {
            agent any
            steps {
                echo 'Pushing image to Docker Hub...'
                // Используем заранее созданные в Jenkins Credential ID: 'docker-hub-creds'
                withCredentials([usernamePassword(credentialsId: 'docker-hub-creds', usernameVariable: 'USER', passwordVariable: 'PASS')]) {
                    sh 'docker login -u $USER -p $PASS'
                    sh "docker push ${DOCKER_IMAGE}"
                }
            }
        }
        
        stage('Deploy to K8s') {
            agent any
            steps {
                echo 'Simulating deployment to Kubernetes...'
                // Этот шаг покажет, что манифесты готовы, но не будет выполняться,
                // так как kubectl не настроен внутри контейнера Jenkins.
                sh "echo Deployment started: kubectl apply -f k8s_manifests/"
            }
        }
    }
}