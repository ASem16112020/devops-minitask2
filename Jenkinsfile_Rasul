pipeline {
    // Используем 'agent none' глобально, так как мы явно определяем контейнер внутри первой стадии.
    agent none 

    // Определяем переменные
    environment {
        // Ваш логин DockerHub (уже исправлено на AviciiG)
        DOCKER_IMAGE = 'AviciiG/python-devops:latest' 
        DOCKERFILE_NAME = 'Dockerfile_Rasul'
    }

    stages {
        stage('Build Setup (Python Lint)') {
            steps {
                echo 'Starting Python syntax check inside Python container...'
                // Используем Scripted-синтаксис 'docker.image().inside{}', который 
                // работает, даже если плагин 'Docker Pipeline' установлен некорректно.
                script {
                    docker.image('python:3.9-slim').inside { 
                        sh 'python3 -m py_compile app.py'
                        echo 'Python syntax check passed.'
                    }
                }
            }
        }
        
        stage('Docker Build') {
            // Используем 'agent any' для выполнения команды 'docker' на хосте Jenkins
            agent any
            steps {
                echo 'Building Docker image...'
                // Если 'docker' не будет найден, это означает, что нужно чинить Docker-доступ.
                sh "docker build -f ${DOCKERFILE_NAME} -t ${DOCKER_IMAGE} ."
            }
        }
        
        stage('Push to Hub') {
            agent any
            steps {
                echo 'Pushing image to Docker Hub...'
                // Используем Credential ID, который вы должны были создать: 'docker-hub-creds'
                withCredentials([usernamePassword(credentialsId: 'docker-hub-creds', usernameVariable: 'USER', passwordVariable: 'PASS')]) {
                    sh 'docker login -u $USER -p $PASS'
                    sh "docker push ${DOCKER_IMAGE}"
                }
            }
        }
        
        stage('Deploy to K8s') {
            agent any
            steps {
                echo 'Simulating deployment to Kubernetes...'
                sh "echo Deployment started: kubectl apply -f k8s_manifests/"
            }
        }
    }
}